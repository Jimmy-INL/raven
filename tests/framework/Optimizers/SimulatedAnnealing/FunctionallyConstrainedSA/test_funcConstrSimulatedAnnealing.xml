<?xml version="1.0" ?>
<Simulation verbosity="debug">
  <TestInfo>
    <name>framework/Optimizers.ConstrainFunction</name>
    <author>talbpaul</author>
    <created>2020-02-05</created>
    <classesTested>Optimizer</classesTested>
    <description>
      This test uses a multidimensional linear function such that the trajectory must pass through
      a functional constraint to reach the optimal point.
    </description>
  </TestInfo>

  <RunInfo>
    <WorkingDir>.</WorkingDir>
    <Sequence>optimize, print</Sequence>
  </RunInfo>

  <Steps>
    <MultiRun name="optimize">
      <Input class="DataObjects" type="PointSet">placeholder</Input>
      <Model class="Models" type="ExternalModel">goal</Model>
      <Optimizer class="Optimizers" type="SimulatedAnnealing">opter</Optimizer>
      <SolutionExport class="DataObjects" type="PointSet">opt_export</SolutionExport>
      <Output class="DataObjects" type="PointSet">optOut</Output>
      <Output class="OutStreams" type="Print">opt_export</Output>
    </MultiRun>
    <IOStep name="print">
      <Input class="DataObjects" type="PointSet">opt_export</Input>
      <Input class="DataObjects" type="PointSet">optOut</Input>
      <Output class="OutStreams" type="Print">opt_export</Output>
      <Output class="OutStreams" type="Print">optOut</Output>
    </IOStep>
  </Steps>

  <Distributions>
    <Uniform name='dist'>
      <lowerBound>-1</lowerBound>
      <upperBound>1</upperBound>
    </Uniform>
  </Distributions>

  <Optimizers>
    <SimulatedAnnealing name="opter">
      <samplerInit>
        <limit>500</limit>
        <initialSeed>42</initialSeed>
        <writeSteps>every</writeSteps>
        <type>min</type>
      </samplerInit>
      <!-- <acceptance>
        <Strict/>
        <!~~ <Probabilistic/> ~~>
      </acceptance> -->
      <convergence>
        <objective>1e-4</objective>
        <temperature>1e-16</temperature>
        <persistence>1</persistence>
      </convergence>
            <convergence>
        <objective>-1</objective>
        <temperature>1e-20</temperature>
        <persistence>1</persistence>
      </convergence>
      <coolingSchedule>
        <exponential>
          <alpha>0.94</alpha>
        </exponential>
      </coolingSchedule>
      <!-- <Constraint class='Functions' type='External'>goal</Constraint> -->
      <variable name="x">
        <distribution>dist</distribution>
        <initial>0.9</initial>
      </variable>
      <variable name="y">
        <distribution>dist</distribution>
        <initial>0.7</initial>
      </variable>
      <objective>ans</objective>
      <TargetEvaluation class="DataObjects" type="PointSet">optOut</TargetEvaluation>
    </SimulatedAnnealing>
  </Optimizers>

  <Functions>
    <External file="../../../AnalyticModels/optimizing/offset_parabola" name="goal">
      <variables>x,y</variables>
    </External>
  </Functions>

  <Models>
    <ExternalModel ModuleToLoad="../../../AnalyticModels/optimizing/offset_parabola" name="goal" subType="">
      <variables>x,y,ans</variables>
    </ExternalModel>
  </Models>

  <DataObjects>
    <PointSet name="placeholder"/>
    <PointSet name="optOut">
      <Input>x,y</Input>
      <Output>ans</Output>
    </PointSet>
    <PointSet name="opt_export">
      <Input>trajID</Input>
      <Output>x,y,ans,iteration,amp_x,amp_y,delta_x, delta_y,fraction,Temp,accepted</Output>
    </PointSet>
  </DataObjects>

  <OutStreams>
    <Print name="optOut">
      <type>csv</type>
      <source>optOut</source>
    </Print>
    <Print name="opt_export">
      <type>csv</type>
      <source>opt_export</source>
      <clusterLabel>trajID</clusterLabel>
    </Print>
  </OutStreams>

</Simulation>
